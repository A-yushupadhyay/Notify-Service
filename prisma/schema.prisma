generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notification {
  id         Int      @id @default(autoincrement())
  toUserId   Int
  fromUserId Int?
  type       String
  metadata   Json
  isRead     Boolean  @default(false)
  createdAt  DateTime @default(now())

  @@index([toUserId, createdAt])
}
